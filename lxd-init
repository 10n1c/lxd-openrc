#!/sbin/openrc-run
# (c) 2016 Alpine Linux
#
# OpenRC service script for LXD
#

LXD_OPTIONS="--logfile /var/log/lxd/lxd.log"

command="/usr/sbin/lxd"
command_args="${LXD_OPTIONS}"
command_background="true"
pidfile="/var/run/${RC_SVCNAME}.pid"

depend() {
        need net
        use  lxcfs
        after firewall
        provide lxd
}
